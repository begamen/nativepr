{% if paragraph.field_video_full_screen.value =='1' %}           
{{ attach_library('sepia/remove-class-from-body') }}
            <section id="tt-intro" class="video-intro">
				<div class="tt-intro-inner full-height-vh bg-dark tt-wrap"> 
					<div class="cover bg-transparent-3-dark"></div>

					<div class="youtube-bg full-cover" 
					style="background-image: url({{file_url(content.field_video_background_image['#items'].entity.uri.value)}}); background-position: 50% 50%;"
					data-property="{
						videoURL: '{{paragraph.field_video_link.value|trim}}',
						containment: 'self',
						quality: 'default',
						startAt: {{paragraph.field_start_at.value|trim}},
						stopAt: {{paragraph.field_stop_at.value|trim}},
						autoPlay: {% if paragraph.field_autoplay.value =='1' %}true{% else %}false{% endif %},
						loop: {% if paragraph.field_loop.value =='1' %}true{% else %}false{% endif %},
						mute: true,
						showControls: false,
						showYTLogo: false,
						realfullscreen: true,
						addRaster: false,
						optimizeDisplay: true,
						stopMovieOnBlur: true
					}">

					</div>
					
						<div class="intro-caption caption-animate intro-caption-xxlg {{ paragraph.field_content_position.value }}">
						{% if content.field_heading_1|render %}<h1 class="intro-title">{{content.field_heading_1}}</h1>{% endif %}
	                    {% if content.field_heading_2|render %}<h2 class="intro-subtitle">{{content.field_heading_2}}</h2>{% endif %}
                        {% if content.field_video_text|render %}
						<p class="intro-description max-width-650">
                        {{content.field_video_text }}
						</p>
						{% endif %}
                        {% if content.field_v_link1|render or content.field_v_link2|render %}
						<div class="margin-top-30">
						{% if content.field_v_link1|render %}
                        {{ content.field_v_link1 }}		
	                    {% endif %} 	
	                    {% if content.field_v_link2|render %}
                        {{ content.field_v_link2 }}		
	                    {% endif %}
							
						</div>
						{% endif %}
					</div>

				</div>
</section>
            

