{% if paragraph.field_contentleft.value =='1' %}
					<div class="split-box sb-content-left">
						<div class="container-fluid">
							<div class="row">
								<div class="row-lg-height">

									<div class="col-lg-6 col-lg-push-6 col-lg-height split-box-image no-padding bg-image" style="background-image: url({{file_url(content.field_sb_image[ '#items'].entity.uri.value)}}); background-position: 50% 50%;">

										<div class="sbi-height"></div>

									</div>

									<div class="col-lg-6 col-lg-pull-6 col-lg-height col-lg-middle no-padding">

										<div class="split-box-content sb-content-left">
											
											{% if content.field_sb_title|render or content.field_sb_subtitle|render %}
											
											<div class="tt-heading tt-heading-sm">
												<div class="tt-heading-inner">
	{% if content.field_sb_title|render %}<h2 class="tt-heading-title">{{ content.field_sb_title }}</h2>{% endif %}
		{% if content.field_sb_subtitle|render %}<div class="tt-heading-subtitle">{{ content.field_sb_subtitle }}</div>{% endif %}
													<hr class="hr-short">
												</div>
											</div>
											{% endif %}

											<div class="margin-top-30">
												{% if content.field_sb_text|render %}
											<div class="margin-top-30">
											{{ content.field_sb_text }}
												
											</div>
{% endif %}
											</div>
											
										</div>


									</div>
								</div>
							</div> 
						</div>
					</div>

{% else %}











<div class="split-box">
	<div class="container-fluid">
		<div class="row">
			<div class="row-lg-height">
              <div class="col-lg-6 col-lg-height split-box-image no-padding bg-image" style="background-image: url({{file_url(content.field_sb_image[ '#items'].entity.uri.value)}}); background-position: 50% 50%;">

										<div class="sbi-height padding-height-100"></div>

									</div> 

			
									<div class="col-lg-6 col-lg-height col-lg-middle no-padding">

										<div class="split-box-content sb-content-right {% if paragraph.field_shifted_left.value =='1' %}shifted-left{% endif %}">

											{% if content.field_sb_title|render %}
											
											<div class="tt-heading tt-heading-sm">
												<div class="tt-heading-inner">
        {% if content.field_sb_title|render %}<h2 class="tt-heading-title">{{ content.field_sb_title }}</h2>{% endif %}
		{% if content.field_sb_subtitle|render %}<div class="tt-heading-subtitle">{{ content.field_sb_subtitle }}</div>{% endif %}
													
													<hr class="hr-short">
												</div>
											</div>
											{% endif %}
											
{% if content.field_sb_text|render %}
											<div class="margin-top-30">
											{{ content.field_sb_text }}
												
											</div>
{% endif %}
										</div>
										

									</div>
								</div> 
							</div>
						</div> 
					</div>
{% endif %}					

